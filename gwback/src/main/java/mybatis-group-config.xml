<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
  <settings>
    <setting name="mapUnderscoreToCamelCase" value="true"/>
    <setting name="jdbcTypeForNull" value="NULL" />
  </settings>
  <typeAliases>
    <typeAlias type="com.group.board.dto.Board" alias="board"/>
    <typeAlias type="com.group.board.dto.BoardComment" alias="boardcomment"/>
    <typeAlias type="com.group.board.dto.PageBean" alias="pagebean"/>        
  </typeAliases>
  <mappers>
  <mapper resource="BoardMapper.xml"></mapper>
  <mapper resource="BoardCommentMapper.xml"></mapper>  
  </mappers>
</configuration>